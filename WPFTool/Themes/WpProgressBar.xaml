<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WPFTool.Controls">


    <Style TargetType="{x:Type controls:WpProgressBar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:WpProgressBar}">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="10" Height="{TemplateBinding Height}">
                        <Grid ClipToBounds="True">
                            <Rectangle x:Name="PART_Track" Fill="{TemplateBinding Background}" />
                            <Rectangle x:Name="PART_Indicator"
                                       Fill="{TemplateBinding Foreground}"
                                       Width="0"
                                       HorizontalAlignment="Left" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#FF6200EE"/>
        <Setter Property="Background" Value="#FFE0E0E0"/>
    </Style>

    
</ResourceDictionary>