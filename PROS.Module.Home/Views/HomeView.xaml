<UserControl
    x:Class="PROS.Module.Home.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:WPFTool.Controls;assembly=WPFTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PROS.Module.Home.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ctrls:WpTextBox
                    Width="auto"
                    Height="40"
                    Margin="10,0,10,0"
                    HorizontalContentAlignment="Left"
                    Text="{Binding POSFilePath}" />
                <ctrls:WpButton
                    Grid.Column="1"
                    Width="100"
                    Height="40"
                    Margin="10,0,10,0"
                    Command="{Binding LoadPOSFileCommand}"
                    Content="Load POS file" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ctrls:WpTextBox
                    Width="auto"
                    Height="40"
                    Margin="10,0,10,0"
                    HorizontalContentAlignment="Left"
                    Text="{Binding ShopeeFilePath}" />
                <ctrls:WpButton
                    Grid.Column="1"
                    Width="100"
                    Height="40"
                    Margin="10,0,10,0"
                    Command="{Binding LoadShopeeFileCommand}"
                    Content="Load Shopee file" />
            </Grid>
            <Grid Grid.Row="2">
                <ctrls:WpButton
                    Width="100"
                    Height="40"
                    Margin="10,0,10,0"
                    Command="{Binding AnalyzeCommand}"
                    Content="Analyze" />
            </Grid>
            <Border
                Grid.Row="3"
                Margin="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding OrderList}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding OrderId}" Header="Order ID" />
                            <DataGridTextColumn Binding="{Binding SoLuong}" Header="Số lượng" />
                            <DataGridTextColumn Binding="{Binding DonGia}" Header="Số lượng" />
                            <DataGridTextColumn Binding="{Binding PhiVCThuCuaKhach}" Header="Số lượng" />
                            <DataGridTextColumn Binding="{Binding PhuThu}" Header="Số lượng" />
                            <DataGridTextColumn Binding="{Binding GiamGiaTuDonHang}" Header="GiamGiaTuDonHang" />
                            <DataGridTextColumn Binding="{Binding GiamGiaTungSanPham}" Header="GiamGiaTungSanPham" />
                            <DataGridTextColumn Binding="{Binding PhiSan}" Header="PhiSan" />
                            <DataGridTextColumn Binding="{Binding SanTroGia}" Header="SanTroGia" />
                            <DataGridTextColumn Binding="{Binding ChenhLechPhiVC_SanTMDT}" Header="ChenhLechPhiVC_SanTMDT" />
                            <DataGridTextColumn Binding="{Binding PhiDichVu_SanTMDT}" Header="PhiDichVu_SanTMDT" />
                            <DataGridTextColumn Binding="{Binding PhiThanhToan_SanTMDT}" Header="PhiThanhToan_SanTMDT" />
                            <DataGridTextColumn Binding="{Binding PhiHoaHongNenTang_SanTMDT}" Header="PhiHoaHongNenTang_SanTMDT" />
                            <DataGridTextColumn Binding="{Binding PhiCoDinh_GiaoDich_SanTMDT}" Header="PhiCoDinh_GiaoDich_SanTMDT" />
                            <DataGridTextColumn Binding="{Binding SoLuongHoan}" Header="SoLuongHoan" />
                            <DataGridTextColumn Binding="{Binding TrangThai}" Header="TrangThai" />
                            <DataGridTextColumn Binding="{Binding CongThuc}" Header="CongThuc" />
                            <DataGridTextColumn Binding="{Binding COD}" Header="COD" />
                            <DataGridTextColumn Binding="{Binding Diff}" Header="Diff" />
                            <DataGridTextColumn Binding="{Binding Result}" Header="KetQuaDoiSoat" />
                            <!--  Thêm các cột khác theo OrderModel  -->
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
        </Grid>
    </Grid>
</UserControl>
